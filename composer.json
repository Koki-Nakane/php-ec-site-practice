{
    "name": "koki/php-ec-site-practice",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Util/DateRange.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require": {
        "erusev/parsedown": "^1.7",
        "phpmailer/phpmailer": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.59",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.1"
    },
    "scripts": {
        "format:dry": "php-cs-fixer fix --dry-run --diff --config=.php-cs-fixer.dist.php",
        "format": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "stan": "phpstan analyse -c config/phpstan.neon",
        "test": "phpunit",
        "check": [
            "@format:dry",
            "@stan",
            "@test"
        ]
    }
}
